{
    "name": "dfo-osdt/osp",
    "type": "project",
    "description": "The EOS Open Science Portal.",
    "keywords": ["open science", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "jenssegers/agent": "^2.6.4",
        "laracasts/cypress": "^3.0",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.2.1",
        "laravel/telescope": "^4.12.0",
        "laravel/tinker": "^2.8.0",
        "orhanerday/open-ai": "^4.7",
        "predis/predis": "^2.1.1",
        "rappasoft/laravel-authentication-log": "^3.0",
        "spatie/laravel-medialibrary": "^10.7.10",
        "spatie/laravel-permission": "^5.8",
        "spatie/laravel-query-builder": "^5.1.1",
        "spatie/laravel-ray": "^1.32",
        "spatie/simple-excel": "^3.1",
        "torann/geoip": "^3.0.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.12.3",
        "fakerphp/faker": "^1.21",
        "laravel/breeze": "^1.18.0",
        "laravel/pint": "^1.4.0",
        "laravel/sail": "^1.18.1",
        "mockery/mockery": "^1.5.1",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.0",
        "pestphp/pest": "^1.22.3",
        "pestphp/pest-plugin-laravel": "^1.4",
        "phpunit/phpunit": "^9.6",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
