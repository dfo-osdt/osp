{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["resources/src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "cypress", "@intlify/unplugin-vue-i18n/messages"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.vue", "**/*.d.ts"],
  "exclude": [
    "vendor",
    "public/build",
    "public/vendor",
    "tests/cypress/support",
    "node_modules"
  ]
}
