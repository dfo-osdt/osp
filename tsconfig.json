{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node16",
    "paths": {
      "@/*": ["resources/src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "cypress"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["resources/src/**/*.ts", "resources/src/**/*.d.ts", "vite.config.ts"],
  "exclude": [
    "vendor",
    "public/build",
    "public/vendor",
    "tests/cypress/support"
  ]
}
