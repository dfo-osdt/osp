{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "resources/src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "@intlify/unplugin-vue-i18n/messages"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    "**/*.d.ts"
  ],
  "exclude": [
    "vendor",
    "public/build",
    "public/vendor",
    "node_modules"
  ]
}
